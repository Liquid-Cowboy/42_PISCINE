#include <unistd.h>

void	ft_putnbr(int nbr)
{
	long	n = 0;
	int	temp = 0;
	int	*ptr = &temp;
	int	count = 0;

	if (nbr < 0)
	{
		write (1, "-", 1);
		n = -(long)nbr;
	}
	else
		n = (long)nbr;
	while (n > 0)
	{
		*ptr = *ptr * 10 + (n % 10);
		n = n / 10;
		count++;
	}
	while (count)
	{
		write (1, &"0123456789"[*ptr % 10], 1);
		*ptr = *ptr / 10;
		count--;
	}


}

int	main(void)
{
	ft_putnbr(123454);
	return (0);
}
